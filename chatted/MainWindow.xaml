<Window x:Class="chatted.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chatted"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF303030"/>
                <GradientStop Color="#FFEAEAEA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="178,158,0,0" VerticalAlignment="Top" Width="148" Height="45"
                Click="button_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="197" Margin="80,51,0,0" VerticalAlignment="Top" Width="363">
            <TextBox x:Name="txtName"
                     TextWrapping="Wrap"
                     Text="your name?" 
                     Margin="0,0,0,131"
                     Padding="10,17,0,0"
                     Background="#FFEEEEEE"
                     GotFocus="txtName_GotFocus"
                     
                     />
        </Border>

    </Grid>
</Window>
